@{
    anipet.Models.User activeUser = ((anipet.Models.User)Session["User"]);
}
<!-- TODO: change namespace to Anipet-->
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title - Anipet</title>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Josefin+Slab:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <link href="~/Content/Site.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Assistant:300,400,600,700,800" rel="stylesheet">
    <link rel="icon" href="~/Content/Images/anipetFavicon.jpg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="~/Scripts/jquery-1.10.2.js"></script>
</head>
<body>

    <header class="navbar flex-column flex-md-row" style="height: 10px;">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">Anipet</a>
        </div>

        <div class="row">


            <div id="temperatureDiv" class="col-lg-6 text-center">
                <!--<hr />-->
                <h4>
                    Weather in Rishon Lezion
                </h4>
                <!--<hr />-->
                <p style="color:white">Achieving the weather, just a second.</p>
            </div>

            <script src="~/Scripts/jquery-3.4.1.js"></script>
            <script src="~/Scripts/getWeather.js"></script>

        </div>

    </header>

    <div class="brand d-flex justify-content-end" style="padding-top:0;">
        <img src="~/Content/Images/imageedit_1_5651215422.png" class="logo" alt="">
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-default" role="navigation" id="MainNav">
        <div class="container">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="nav-item li-2 px-lg-4">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    @if (activeUser != null)
                    {
                        
                    }
                    @if (activeUser != null && activeUser.IsAdmin)
                    {
                        <li class="nav-item li-2 px-lg-4">
                            @Html.ActionLink("Users", "Index", "Users", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    @if (activeUser != null && activeUser.IsAdmin)
                    {
                        <li class="nav-item li-2 px-lg-4">
                            @Html.ActionLink("Materials", "Index", "Materials", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    @if (activeUser != null && activeUser.IsAdmin)
                    {
                        <li class="nav-item li-2 px-lg-4">
                            @Html.ActionLink("Purchases", "Index", "Purchases", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    <li class="nav-item li-2 px-lg-4">
                        @Html.ActionLink("Stores", "Index", "Stores", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item li-2 px-lg-4">
                        @Html.ActionLink("About", "About", "")
                    </li>
                    <li class="nav-item li-2 px-lg-4">
                        @Html.ActionLink("Contact", "Contact", "Home")
                    </li>




                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()



        <footer>
            <div class="col-lg-12">
                <p>@DateTime.Now.Year - Anipet</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script>
        $('.carousel').carousel({
            interval: 4000 //changes the speed
        })
    </script>

    <script>
        $(".ul li").on("click", function () {
            $(this).siblings().removeClass('active');
            $(this).addClass("active");
        });

    </script>
    <script>
        $(document).ready(function () {
            $(window).scroll(function () {
                if ($(window).scrollTop() > 286) {
                    $('#MainNav').addClass('navbar-fixed-top');
                }
                if ($(window).scrollTop() < 287) {
                    $('#MainNav').removeClass('navbar-fixed-top');
                }
            });
        });
    </script>
</body>
</html>
