@model anipet.Models.FoodSource

@{
    ViewBag.Title = "Edit Food Source";
}

<div class="box">
    <hr>
    <h2 class="intro-text text-center">
        <strong>Edit</strong>
        <small>Food Source</small>
    </h2>
    <hr>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="text-align:left;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SourcePricePerKilo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.SourcePricePerKilo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SourcePricePerKilo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    <div class="col-md-offset-7 col-md-1">
                        <input type="submit" value="Save" class="btn btn-light" />
                    </div>
                    <div class="col-md-1" style="margin-top:6px">
                        <a href="/FoodSources">Back</a>
                    </div>
                </div>
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>