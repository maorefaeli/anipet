@{
    ViewBag.Title = "Index";
    anipet.Models.User currentUser = (anipet.Models.User)Session["User"];
}

<div class="box" style="flex-direction: column">
    <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center text-danger" style="font-size: 30px">
            Error
            <strong>@ViewBag.ErrorMessage</strong>
        </h2>
        <hr>
    </div>
    <div style="text-align: right">
        @if (currentUser == null)
        {
            @Html.ActionLink("Login here", "Login", "Users")
        }
    </div>
</div>
