@model anipet.Controllers.ProductsController.CreateProductsViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="box" style="flex-direction: column">
    <hr>
    <h2 class="intro-text text-center">
        <strong>Edit</strong>
        <small>Product</small>
    </h2>
    <hr>
    <div class="container  col-lg-6 col-lg-offset-3">
        @using (Html.BeginForm("Edit", "Products", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Product.Id)
                <div class="form-group">
                    <div>
                        @Html.EditorFor(model => model.Product.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Product.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        @Html.DropDownListFor(model => model.FoodSourceId, ViewBag.FoodSourceList as SelectList, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FoodSourceId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <label>Fabric length in meters:</label>
                <div class="form-group">
                    <div>
                        @Html.EditorFor(model => model.Product.ProductWeightInKilo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Product.ProductWeightInKilo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <label>Stores that have that Product (can be none or multiple):</label>
                <div class="form-group">
                    <div>
                        @Html.ListBoxFor(model => model.StoresIds, ViewBag.StoresList as MultiSelectList, new { @class = "form-control", multiple = "multiple" })
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <div class="col-lg-offset-9 col-lg-1">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                        <div class="col-lg-offset-1 col-lg-1" style="margin-top:6px">
                            <a href="/Products">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @section   Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>